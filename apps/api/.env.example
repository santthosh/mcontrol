# Firebase Configuration
FIREBASE_PROJECT_ID=mcontrol-dev
FIRESTORE_DATABASE=(default)

# Firebase Web API Key (from Firebase Console > Project Settings > General)
FIREBASE_API_KEY=

# Firebase Emulator (for local development)
# These are auto-detected when running with docker-compose
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# Development mode - set to true to bypass auth
AUTH_DISABLED=true

# Google OAuth (for Google SSO sign-in)
# Required for all environments. For local dev, use the dev environment's
# OAuth client credentials. The OAuth client must have http://127.0.0.1
# as an authorized redirect URI (Google allows any port on 127.0.0.1).
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Credential encryption (AES-256-GCM, base64-encoded 32-byte key)
# Generate with: python -c "import secrets,base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
CREDENTIAL_ENCRYPTION_KEY=

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000
